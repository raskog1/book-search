{
  "name": "book-search",
  "version": "1.0.0",
  "description": "A react-based Google Books Search app",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raskog1/book-search.git"
  },
  "author": "Ryan Skog",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raskog1/book-search/issues"
  },
  "homepage": "https://github.com/raskog1/book-search#readme",
  "dependencies": {
    "axios": "^0.20.0",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "mongoose": "^5.10.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
